<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/savePopupActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SavePopupActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="600dp"
        android:layout_height="280dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/popup_background">

            <Button
                android:id="@+id/saveSlot3"
                style="@style/buttonStyle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="36dp"
                android:text="@string/empty_save"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <Button
                android:id="@+id/saveSlot1"
                style="@style/buttonStyle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="36dp"
                android:text="@string/empty_save"
                app:layout_constraintBottom_toBottomOf="@+id/saveSlot2"
                app:layout_constraintEnd_toStartOf="@+id/saveSlot2"
                app:layout_constraintTop_toTopOf="@+id/saveSlot2"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/saveSlot2"
                style="@style/buttonStyle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="36dp"
                android:text="@string/empty_save"
                app:layout_constraintBottom_toBottomOf="@+id/saveSlot3"
                app:layout_constraintEnd_toStartOf="@+id/saveSlot3"
                app:layout_constraintTop_toTopOf="@+id/saveSlot3"
                app:layout_constraintVertical_bias="0.0" />

            <ImageButton
                android:id="@+id/cancel_button"
                style="@style/backButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                app:layout_constraintStart_toStartOf="@+id/saveSlot1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                style="@style/textViewOnBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="172dp"
                android:text="Do you want to save?"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView6"
                style="@style/textViewOnBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Click to save.\nDouble click to override.\n Hold to delete."
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/textView4"
                app:layout_constraintHorizontal_bias="0.482"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>